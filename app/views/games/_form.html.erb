    <div>
        <%= render partial: 'error', locals: {errors: @game.errors[:name]} %>
        <%= f.label :name, "Tytuł gry" %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :description, "Opis" %>
        <%= f.text_area :description %>
    </div>

    <div>
        <%= render partial: 'error', locals: {errors: @game.errors[:min_player_count]} %>
        <%= f.label :min_player_count, "Minimalna liczba graczy" %>
        <%= f.text_field :min_player_count %>
    </div>

    <div>
        <%= render partial: 'error', locals: {errors: @game.errors[:max_player_count]} %>
        <%= f.label :max_player_count, "Maksymalna liczba graczy" %>
        <%= f.text_field :max_player_count %>
    </div>

    <div>
        <%= render partial: 'error', locals: {errors: @game.errors[:publication_year]} %>
        <%= f.label :publication_year, "Rok wydania" %>
        <%= f.text_field :publication_year %>
    </div>

    <div>
        <%= render partial: 'error', locals: {errors: @game.errors[:deposit]} %>
        <%= f.label :deposit, "Kaucja" %>
        <%= f.text_field :deposit %>
    </div>

    <div>
        <%= render partial: 'error', locals: {errors: @game.errors[:rental_price]} %>
        <%= f.label :rental_price, "Cena za dzień wypożyczenia" %>
        <%= f.text_field :rental_price %>
    </div>

    <div>
        <%= f.label :picture, "Zdjęcie" %>
        <% if :edit_mode? %>
                <%= image_tag @game.picture if @game.picture.attached? %>
                </br>
        <% end %>
        <%= f.file_field :picture, multiple: false, direct_upload: true %>
    </div>

    <div>
        <%= f.submit "Submit", disable_with: 'Submiting...' %>
    </div>